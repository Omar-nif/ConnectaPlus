generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  groups    Group[]
}

model Group {
  id             Int      @id @default(autoincrement())
  ownerId        Int
  platformKey    String
  platformName   String
  planKey        String?
  basePriceMXN   Int
  slots          Int
  pricePerMember Int
  credentials    String
  notes          String?
  status         String   @default("active")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  owner          User     @relation(fields: [ownerId], references: [id])

  @@index([ownerId])
}
